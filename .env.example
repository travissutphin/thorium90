# Development Environment Configuration
# Copy this file to .env for local development
# 
# PREREQUISITES CHECK:
# - PHP 8.2+ with extensions: mbstring, xml, ctype, json, bcmath, fileinfo, tokenizer, sqlite3
# - Composer 2.0+
# - Node.js 16+ with npm
# 
# QUICK VERIFICATION:
# Run: php --version && composer --version && node --version
# Check PHP extensions: php -m | grep -E "(mbstring|xml|sqlite)"
# Verify minimum versions: php -v | grep -E "8\.[2-9]|[9-9]\."

APP_NAME="Thorium90 CMS"
APP_ENV=local
APP_KEY=
APP_DEBUG=true

# APP_URL Configuration (CRITICAL for media file access)
# ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ
# LOCAL DEVELOPMENT: Use HTTP (not HTTPS) to avoid media loading issues
# Choose based on your setup:
APP_URL=http://localhost:8000     # ‚Üê Most compatible (recommended)
# APP_URL=http://127.0.0.1:8000   # ‚Üê Use this if localhost doesn't work
# 
# PRODUCTION: Use HTTPS with proper SSL certificate
# APP_URL=https://yourdomain.com
#
# ‚ö†Ô∏è COMMON ISSUE: Using HTTPS locally without SSL will break media file loading
# üí° QUICK FIX: If images don't load, change https:// to http:// above

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database Configuration
# For Production: MySQL (recommended)
# DB_CONNECTION=mysql
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=thorium90_production
# DB_USERNAME=thorium90_user
# DB_PASSWORD=secure_password

# For Development: SQLite (recommended - quick setup, cross-platform)
# Default configuration - works on Windows, macOS, Linux
DB_CONNECTION=sqlite
# Relative path works on all platforms
DB_DATABASE=database/database.sqlite

# PLATFORM-SPECIFIC NOTES:
# Windows: Database file created automatically
# macOS/Linux: May need to create directory and set permissions
#              run: mkdir -p database && touch database/database.sqlite
#              then: chmod 664 database/database.sqlite

# For Production: PostgreSQL (alternative)
# DB_CONNECTION=pgsql
# DB_HOST=127.0.0.1
# DB_PORT=5432
# DB_DATABASE=thorium90_production
# DB_USERNAME=thorium90_user
# DB_PASSWORD=secure_password

# MySQL/PostgreSQL Advanced Options
# DB_CHARSET=utf8mb4
# DB_COLLATION=utf8mb4_unicode_ci
# DB_TIMEZONE=UTC
# DB_SSL_MODE=prefer

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=array
# CACHE_PREFIX=
# For development: array cache is faster and automatically cleared
# For production: use database, redis, or memcached

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=resend
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="noreply@localhost"
MAIL_FROM_NAME="${APP_NAME}"

# Resend Configuration
RESEND_API_KEY=

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# Development Performance & Security
PHP_MIN_VERSION=8.2
VITE_PORT=5173

