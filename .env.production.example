# Production Environment Configuration
# Copy this file to .env for production deployment

APP_NAME="Thorium90 CMS"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://yourdomain.com

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Production Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=thorium90_production
DB_USERNAME=thorium90_user
DB_PASSWORD=

# Session Configuration for Production
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=.yourdomain.com
SESSION_SECURE_COOKIE=true

BROADCAST_CONNECTION=redis
FILESYSTEM_DISK=s3
QUEUE_CONNECTION=redis

# Production Cache Configuration
CACHE_STORE=redis
CACHE_PREFIX=thorium90_prod

MEMCACHED_HOST=127.0.0.1

# Redis Configuration
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=
REDIS_PORT=6379
REDIS_DB=0

# Production Mail Configuration
MAIL_MAILER=resend
MAIL_SCHEME=null
MAIL_HOST=smtp.resend.com
MAIL_PORT=587
MAIL_USERNAME=resend
MAIL_PASSWORD=
MAIL_FROM_ADDRESS="noreply@yourdomain.com"
MAIL_FROM_NAME="${APP_NAME}"

# Resend Configuration
RESEND_API_KEY=

# AWS S3 Configuration for Production
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=thorium90-production
AWS_USE_PATH_STYLE_ENDPOINT=false

# Sanctum Configuration for Production
SANCTUM_STATEFUL_DOMAINS=yourdomain.com,api.yourdomain.com
SANCTUM_TOKEN_PREFIX=thorium90_
SANCTUM_EXPIRATION=1440

VITE_APP_NAME="${APP_NAME}"

# Social Login - Production Keys
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URL=https://yourdomain.com/auth/google/callback

GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_REDIRECT_URL=https://yourdomain.com/auth/github/callback

FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=
FACEBOOK_REDIRECT_URL=https://yourdomain.com/auth/facebook/callback

LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=
LINKEDIN_REDIRECT_URL=https://yourdomain.com/auth/linkedin/callback

TWITTER_CLIENT_ID=
TWITTER_CLIENT_SECRET=
TWITTER_REDIRECT_URL=https://yourdomain.com/auth/twitter/callback

GITLAB_CLIENT_ID=
GITLAB_CLIENT_SECRET=
GITLAB_REDIRECT_URL=https://yourdomain.com/auth/gitlab/callback

# Security Settings
FORCE_HTTPS=true
HSTS_MAX_AGE=31536000

# Performance Settings
OPCACHE_ENABLE=true
OPCACHE_VALIDATE_TIMESTAMPS=false

# Monitoring & Logging
SENTRY_LARAVEL_DSN=
LOG_SLACK_WEBHOOK_URL=
