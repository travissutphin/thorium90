# Staging Environment Configuration
# Use this template for staging deployments (testing/pre-production)
# Balances development flexibility with production-like conditions

APP_NAME="Thorium90 CMS - Staging"
APP_ENV=staging
APP_KEY=
APP_DEBUG=false
APP_TIMEZONE=UTC
APP_URL=https://staging.yourapp.com

APP_LOCALE=en
APP_FALLBACK_LOCALE=en

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single,errorlog
LOG_LEVEL=info

# Staging Database - MySQL
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=thorium90_staging
DB_USERNAME=staging_user
DB_PASSWORD=staging_secure_password

# Database Options
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci
DB_TIMEZONE=UTC

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_SECURE_COOKIE=true

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

# Caching - Database for simplicity, Redis for performance
CACHE_STORE=database
CACHE_PREFIX=thorium90_staging

# Redis (optional - for better performance)
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Staging Mail Settings - Use Mailtrap or similar testing service
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=your_mailtrap_username
MAIL_PASSWORD=your_mailtrap_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="staging@yourapp.com"
MAIL_FROM_NAME="${APP_NAME}"

# Resend Configuration (alternative)
RESEND_API_KEY=

# File Storage - Local for staging, S3 for production-like testing
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Staging optimizations
AUTO_MIGRATE=false
CACHE_CONFIG_ON_DEPLOY=true
OPTIMIZE_AUTOLOADER=true

# Thorium90 Modules - Enable all for testing
MODULE_PAGES=true
MODULE_BLOG=true
MODULE_ECOMMERCE=true
MODULE_API=true
MODULE_2FA=true
MODULE_SOCIAL_LOGIN=true

# Social Login - Use test credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URL="${APP_URL}/auth/google/callback"

GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_REDIRECT_URL="${APP_URL}/auth/github/callback"

FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=
FACEBOOK_REDIRECT_URL="${APP_URL}/auth/facebook/callback"

LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=
LINKEDIN_REDIRECT_URL="${APP_URL}/auth/linkedin/callback"

TWITTER_CLIENT_ID=
TWITTER_CLIENT_SECRET=
TWITTER_REDIRECT_URL="${APP_URL}/auth/twitter/callback"

GITLAB_CLIENT_ID=
GITLAB_CLIENT_SECRET=
GITLAB_REDIRECT_URL="${APP_URL}/auth/gitlab/callback"

VITE_APP_NAME="${APP_NAME}"