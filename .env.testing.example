# Testing Environment Configuration
# Copy this file to .env.testing for running tests

APP_NAME="Thorium90 CMS Testing"
APP_ENV=testing
APP_KEY=base64:AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA=
APP_DEBUG=true
APP_URL=http://localhost

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=4

LOG_CHANNEL=single
LOG_LEVEL=debug

# Testing Database Configuration (In-Memory SQLite)
DB_CONNECTION=sqlite
DB_DATABASE=:memory:

# Session Configuration for Testing
SESSION_DRIVER=array
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_SECURE_COOKIE=false

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync

# Testing Cache Configuration
CACHE_STORE=array
CACHE_PREFIX=thorium90_test

# Mail Configuration for Testing
MAIL_MAILER=array
MAIL_FROM_ADDRESS="test@thorium90.test"
MAIL_FROM_NAME="${APP_NAME}"

# Disable external services in testing
RESEND_API_KEY=test_key

# AWS Configuration for Testing (Fake)
AWS_ACCESS_KEY_ID=testing
AWS_SECRET_ACCESS_KEY=testing
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=thorium90-testing
AWS_USE_PATH_STYLE_ENDPOINT=false

# Sanctum Configuration for Testing
SANCTUM_STATEFUL_DOMAINS=localhost,localhost:3000,127.0.0.1,127.0.0.1:8000,::1
SANCTUM_TOKEN_PREFIX=test_
SANCTUM_EXPIRATION=null

VITE_APP_NAME="${APP_NAME}"

# Social Login - Testing Keys (Fake)
GOOGLE_CLIENT_ID=test_google_client_id
GOOGLE_CLIENT_SECRET=test_google_client_secret
GOOGLE_REDIRECT_URL=http://localhost/auth/google/callback

GITHUB_CLIENT_ID=test_github_client_id
GITHUB_CLIENT_SECRET=test_github_client_secret
GITHUB_REDIRECT_URL=http://localhost/auth/github/callback

FACEBOOK_CLIENT_ID=test_facebook_client_id
FACEBOOK_CLIENT_SECRET=test_facebook_client_secret
FACEBOOK_REDIRECT_URL=http://localhost/auth/facebook/callback

LINKEDIN_CLIENT_ID=test_linkedin_client_id
LINKEDIN_CLIENT_SECRET=test_linkedin_client_secret
LINKEDIN_REDIRECT_URL=http://localhost/auth/linkedin/callback

TWITTER_CLIENT_ID=test_twitter_client_id
TWITTER_CLIENT_SECRET=test_twitter_client_secret
TWITTER_REDIRECT_URL=http://localhost/auth/twitter/callback

GITLAB_CLIENT_ID=test_gitlab_client_id
GITLAB_CLIENT_SECRET=test_gitlab_client_secret
GITLAB_REDIRECT_URL=http://localhost/auth/gitlab/callback

# Testing Specific Settings
TELESCOPE_ENABLED=false
DEBUGBAR_ENABLED=false
