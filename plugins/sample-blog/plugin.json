{
    "id": "sample-blog",
    "name": "Sample Blog Plugin",
    "version": "1.0.0",
    "description": "A sample blog plugin demonstrating the plugin architecture",
    "author": "Thorium90 Team",
    "category": "content",
    "namespace": "Plugins\\SampleBlog",
    "provider": "SampleBlogServiceProvider",
    "dependencies": {},
    "config": {
        "posts_per_page": 10,
        "enable_comments": true,
        "enable_categories": true,
        "enable_tags": true
    },
    "templates": [
        {
            "id": "blog-post",
            "name": "Blog Post Template",
            "description": "Template for individual blog posts",
            "category": "post",
            "layouts": ["default", "sidebar"],
            "blocks": ["hero", "content", "comments"],
            "themes": ["default"]
        },
        {
            "id": "blog-list",
            "name": "Blog List Template", 
            "description": "Template for blog post listings",
            "category": "page",
            "layouts": ["default", "sidebar"],
            "blocks": ["hero", "post-grid", "pagination"],
            "themes": ["default"]
        }
    ],
    "layouts": [
        {
            "id": "blog-sidebar",
            "name": "Blog Sidebar Layout",
            "description": "Layout with blog-specific sidebar",
            "category": "blog",
            "sections": ["main", "sidebar"]
        }
    ],
    "blocks": [
        {
            "id": "recent-posts",
            "name": "Recent Posts Block",
            "description": "Display recent blog posts",
            "category": "sidebar",
            "configurable": true
        },
        {
            "id": "post-grid",
            "name": "Post Grid Block",
            "description": "Display posts in a grid layout",
            "category": "content",
            "configurable": true
        },
        {
            "id": "comments",
            "name": "Comments Block",
            "description": "Display and manage post comments",
            "category": "content",
            "configurable": true
        }
    ],
    "themes": [
        {
            "id": "blog-modern",
            "name": "Modern Blog Theme",
            "description": "A modern theme for blog content",
            "colors": {
                "primary": "#2563eb",
                "secondary": "#64748b",
                "accent": "#0ea5e9"
            }
        }
    ],
    "permissions": [
        "manage blog posts",
        "create blog posts",
        "edit blog posts",
        "delete blog posts",
        "manage blog categories",
        "manage blog comments"
    ],
    "routes": {
        "web": true,
        "api": true,
        "admin": true
    },
    "migrations": true,
    "assets": true,
    "translations": ["en", "es", "fr"],
    "requirements": {
        "php": ">=8.1",
        "laravel": ">=10.0"
    }
}
